
<div class="bannershow " style="background-image: url('<%= image_path("bannershow2.jpg")%>');">
</div>

<div class="wrapperjob">
  <div class="jobcontent">
    <h3><b><%= @job.title%></b>-<b><%= @job.company%></b></h3>

    <div class="description">
    <%= simple_format(@job.desc) %>
    </div>
    <div class="email">
      <p>Email:<%= @job.contact %></p>
    </div>

    <div class="photo">
      <%= cl_image_tag @job.photo, height: 300, width: 400, crop: :fill %>

    </div>

    <div class="apply">
     <button class="btn-apply">
     <%= link_to "Interested apply", "https://#{@job.url}?utm=nowmada" %>
     </button>
     <button class="btn-apply">
      <%=link_to "All remoto jobs", jobs_path%>
    </button>


    </div>




  </div>
</div>

