  <div class="wrapperjob">


    <div class="jobcontent">





     <div class="jobbox">
      <h4>Esta semana en Nowmada</h4>
      <div class="jobdetailsright">
        <ul>
          <% @jobs.each do |job| %>
          <ol class ="card">
              <div class="photocard">
                <%= cl_image_tag job.photo, height: 50, width: 50, crop: :fill %>
                </div>

              <div class="jobtitle">
                <h2>
                <%=link_to job.title, job_path(job)%>
                </h2>
                <p><span style="color:#777676">
              <%=job.company%></span> </p>
              </div>


              <div class="delete">
              <% if current_user && current_user.role? %>
              <%= link_to job_path(job), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <p>Delete job</p>
              <% end %>
              <% end %>

              </div>



          </ol>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

