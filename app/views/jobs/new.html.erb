<h1>Enter job in the DB</h1>

<%= simple_form_for @job do |f| %>
  <%= f.input :title %>
  <%= f.input :company %>
  <%= f.input :desc, as: :text, autofocus: true, :input_html => {:style => 'width: 100%', :rows => 5}%>
  <%= f.input :url %>
  <%= f.input :category %>
  <%= f.input :contact %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
<% end %>


